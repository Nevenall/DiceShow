{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": [
        "/C"
    ],
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": true,
            "args": [
                "dotnet build",
                "${workspaceRoot}\\DiceShow.App\\DiceShow.App.csproj"
            ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "suppressTaskName": true,
            "args": [
                "dotnet test",
                "${workspaceRoot}\\DiceShow.Test\\DiceShow.Test.csproj"
            ],
            "isTestCommand": true
        },
        {
            "taskName": "antlr",
            "suppressTaskName": true,
            "args": [
                "pushd ${workspaceRoot}\\DiceShow.Ops\\Parsing & antlr Dice.g4 -package DiceShow.Ops.Parsing.Internal & echo DONE"
            ],
            "showOutput": "always"
        }
    ]
}