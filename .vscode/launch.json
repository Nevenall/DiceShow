{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Website",
            "logging": {
                "exceptions": true,
                "programOutput": true,
                "trace": true
            },
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}\\DiceShow.App\\bin\\Debug\\netcoreapp1.0\\DiceShow.App.dll",
            "args": [
                "web"
            ],
            "cwd": "${workspaceRoot}\\DiceShow.App",
            "externalConsole": false,
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development"
            }
        },
        {
            "name": "Launch Parser",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}\\DiceShow.Sys\\bin\\Debug\\netcoreapp1.0\\DiceShow.Sys.dll",
            "args": [
                "parser"
            ],
            "cwd": "${workspaceRoot}\\DiceShow.Sys",
            "externalConsole": true,
            "stopAtEntry": false,
            "env": {}
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command.pickProcess}"
        }
    ]
}